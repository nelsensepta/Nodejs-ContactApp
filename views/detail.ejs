<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Product</h2>
      <% if (!product) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data Product No Found <br />
        <a href="/product" class="alert-link fw-normal"
          >&laquo; Back To Product List</a
        >
      </div>
      <% } else {%>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= product.price %></h6>
          <p class="card-text"><%= product.description %></p>
          <a href="/product/edit/<%= product.name %>" class="btn btn-info badge"
            >Edit</a
          >
          <a
            href="/product/delete/<%= product.name %>"
            class="btn btn-danger badge"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
            >Hapus</a
          >
          <a href="/product" class="card-link d-block mt-3"
            >&laquo;Back To Product</a
          >
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<!-- Button trigger modal -->

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Contact</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Apakah Anda Yakin Akan Menghapus Product ini ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <a href="/product/delete/<%= product.name %>" class="btn btn-primary"
          >Save</a
        >
      </div>
    </div>
  </div>
</div>
