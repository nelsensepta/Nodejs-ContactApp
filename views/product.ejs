
<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Product</h2>
            <a href="/product/add" class="btn btn-primary mb-2">Tambah Data</a>
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg  %> 
                </div>
            <% } %>
            <table class="table">
                <% if (products.length === 0) { %>
                   <tr>
                       <td colspan="4">
                        <div class="alert alert-danger fw-bold" role="alert">
                            Data Product is Null
                        <div>
                       </td>
                   </tr>
                <% } %>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Aksi</th>
                    </tr>
                    </thead>
                    <tbody>
                      
                        <% products.forEach((product,i) => {i++ %>
                            <tr>
                                <th scope="row"><%= i++; %> </th>
                                <td><%= product.name %> </td>
                                <td><%= product.price %></td>
                                <td><a href="/product/<%= product.name %> " class="btn btn-success badge rounded-pill">
                                    <i class="bi bi-info-circle"></i>
                                    Detail</a>  
                                </td>
                            </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>